<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuStyle">
        <item name="android:textColor">@color/palette_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BarStyle">
        <item name="android:textColor">@color/palette_mov</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bar_text_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
